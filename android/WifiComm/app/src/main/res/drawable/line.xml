<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/line1">
        <rotate
                android:fromDegrees="90"
                android:pivotX="50%"
                android:pivotY="50%" >
            <shape
                    android:shape="line"
                    android:top="1dip" >
                <stroke
                        android:width="3dip"
                        android:color="@color/colorAccent" />
            </shape>
        </rotate>
    </item>
</layer-list>